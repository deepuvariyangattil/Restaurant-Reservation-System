<h1>YOUR TABLE</h1>
<h2>Manager Login</h2>

<form action="/manager/home" method="POST" class="manager-login" id="manager-login">
    <div class="form-group row">
    <label for="usernamelogin" class="col-sm-2 col-form-label">Username</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="usernamelogin" id="usernamelogin" placeholder="username"/>
    </div>
  </div>
  <div class="form-group row">
    <label for="passwordlogin" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" name="passwordlogin" id="passwordlogin" placeholder="Full name"/>
    </div>
  </div>
    
    <button type="submit" class="btn btn-primary" name="buttonlogin" id="buttonlogin">Login</button>
    <a href="/manager/forgot">Forgot Password</a>
</form>