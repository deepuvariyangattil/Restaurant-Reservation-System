<h1>Find Your Reservation</h1>

<form method="POST" action="/reservation/results">
<div class="form-group row">
  <label for="editReservationNum" class="col-sm-2 col-form-label">Reservation Code</label>
  <div class="col-sm-10"> 
    <input type="text" class="form-control" name="editReservationNum" id="editReservationNum" placeholder="Reservation Code"><br>
  </div> 
</div>

<fieldset class="form-group">
  <legend>OR</legend>
  <div class="form-group row">
    <label for="editReservationEmail" class="col-sm-2 col-form-label">Email Address</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" name="editReservationEmail" id="editReservationEmail" placeholder="Email address" />
    </div>
  </div>

  <div class="form-group row">
    <label for="editReservationPhone" class="col-sm-2 col-form-label">Phone Number</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="editReservationPhone" id="editReservationPhone" placeholder="Phone number"/>
    </div>
  </div>
</fieldset>
<div class="form-group row">
  <div class="col-sm-10">
    <button type="submit" class="btn btn-primary" onclick="return checkFindReservation()" name="editreservationbutton" id="editreservationbutton">Find Reservation</button>
  </div>
</div>
</form>